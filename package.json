{
  "name": "md2pptx-cli",
  "version": "1.0.0",
  "description": "Convert Markdown to PowerPoint via marked + PptxGenJS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "md2pptx": "dist/index.js"
  },
  "overrides": {
    "esbuild": "^0.25.8"
