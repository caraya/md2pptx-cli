  },
  "dependencies": {
    "marked": "^5.1.1",
    "pptxgenjs": "^3.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.1.6"
  }
